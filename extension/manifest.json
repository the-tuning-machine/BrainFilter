{
  "manifest_version": 3,
  "name": "BrainFilter - YouTube Smart Filter",
  "version": "1.0.0",
  "description": "Filtre intelligemment les vidéos YouTube selon l'heure et la catégorie",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "http://localhost:*/*"
      ],
      "js": ["classifier.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["model.json"],
      "matches": [
        "https://www.youtube.com/*",
        "http://localhost:*/*"
      ]
    }
  ]
}
